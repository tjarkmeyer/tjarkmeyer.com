{
  "editor.formatOnSave": true,
  "eslint.alwaysShowStatus": true,
  "eslint.options": {
    "extensions": [
      ".html",
      ".js",
      ".ts",
      ".vue",
      ".jsx",
      ".tsx"
    ]
  },
  "eslint.validate": [
    "html",
    "vue",
    "javascript",
    "javascriptreact",
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "[javascript]": {
    "editor.formatOnSave": false
  },
  "eslint.format.enable": true,
  "css.validate": false,
}
